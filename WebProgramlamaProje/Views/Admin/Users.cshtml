@model IEnumerable<WebProgramlamaProje.Models.AppUser>
@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Kullanıcılar
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kullanıcı adı</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Eposta</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kullanıcı adı</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Eposta</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Name</td>
                            <td>@user.Surname</td>
                            <td>@user.Email</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Son güncellenme tarihi : @DateTime.Now</div>
</div>