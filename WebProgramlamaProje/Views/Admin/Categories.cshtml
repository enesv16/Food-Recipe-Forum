@model IEnumerable<WebProgramlamaProje.Models.Category>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<a href="/admin/createcategory" class="btn btn-sm btn-primary mb-4">Kategori ekle</a>
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Tarifler
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kategori adı</th>
                        
                        <th></th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kategori adı</th>
                        
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Name</td>
                            

                            <td>
                                <a asp-action="DeleteCategory" asp-route-id="@category.Id">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Son güncellenme tarihi : @DateTime.Now</div>
</div>