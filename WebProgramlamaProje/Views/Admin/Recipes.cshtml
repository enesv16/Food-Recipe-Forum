@model IEnumerable<WebProgramlamaProje.Models.Recipe>
@{
    ViewBag.Title = "Tarifler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Tarifler
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tarif adı</th>
                        <th>Kategori</th>
                        <th>Yazar</th>
                        <th>Yorumlar</th>
                        <th></th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tarif adı</th>
                        <th>Kategori</th>
                        <th>Yazar</th>
                        <th>Yorumlar</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var recipe in Model)
                    {
                    <tr>
                        <td>@recipe.Title</td>
                        <td>@recipe.Category.Name</td>
                        <td>@recipe.AppUser.Name</td>
                        <td>@recipe.Comments.Count()</td>
                        
                        <td>
                            <a asp-action="EditRecipe" asp-route-id="@recipe.Id">Edit</a> |
                            <a asp-action="RecipeDetails" asp-route-id="@recipe.Id">Details</a> |
                            <a asp-action="DeleteRecipe" asp-route-id="@recipe.Id">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Son güncellenme tarihi : @DateTime.Now</div>
</div>